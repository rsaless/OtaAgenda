<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Teal200">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/contactFoto"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/ic_no_picture"
            android:background="@color/Teal100"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text="Nome"
                android:textAllCaps="true"
                android:paddingLeft="5dp"
                android:textStyle="bold"/>

            <TextView
                android:layout_marginHorizontal="8dp"
                android:id="@+id/contactNome"
                android:layout_width="0dp"
                android:layout_weight="6"
                android:layout_height="wrap_content"
                tools:text="Nome"
                android:maxLines="1"/>



        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/Teal800"
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text="Endereço"
                android:textAllCaps="true"
                android:paddingLeft="5dp"
                android:textStyle="bold"/>

            <TextView
                android:layout_marginHorizontal="8dp"
                android:id="@+id/contactEndereco"
                android:layout_width="0dp"
                android:layout_weight="6"
                android:layout_height="wrap_content"
                tools:text="Endereço"
                android:maxLines="1"/>



        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/Teal800"
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text="Telefone"
                android:textAllCaps="true"
                android:paddingLeft="5dp"
                android:textStyle="bold"/>

            <TextView
                android:layout_marginHorizontal="8dp"
                android:id="@+id/contactTelefone"
                android:layout_width="0dp"
                android:layout_weight="6"
                android:layout_height="wrap_content"
                tools:text="Telefone"
                android:maxLines="1"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/Teal800"
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textAllCaps="true"
                android:paddingLeft="5dp"
                android:textStyle="bold"/>

            <TextView
                android:layout_marginHorizontal="8dp"
                android:id="@+id/contactEmail"
                android:layout_width="0dp"
                android:layout_weight="6"
                android:layout_height="wrap_content"
                tools:text="Email"
                android:maxLines="1"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/Teal800"
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="10dp"/>

    </LinearLayout>

</ScrollView>
